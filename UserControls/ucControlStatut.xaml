<UserControl x:Class="Apprend_Tissage.UserControls.ucControlStatut"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Apprend_Tissage.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="32" d:DesignWidth="140">
    <Border Background="Gray"  BorderThickness="2" BorderBrush="LightBlue" CornerRadius="4" Padding="4"  Height="32" VerticalAlignment="Top">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="24" />
                <ColumnDefinition Width="116" />
            </Grid.ColumnDefinitions>
            <Border x:Name="bdResult" Grid.Column="0"  Background="DarkGray"  Width="12" BorderThickness="1" BorderBrush="Gray" CornerRadius="12" Padding="4"  Height="12" />
            <TextBlock x:Name="tbResult" Grid.Column="1" Text="CORRECT" Foreground="White" Margin="0,0,10,0" />
        </Grid>
    </Border>
</UserControl>
